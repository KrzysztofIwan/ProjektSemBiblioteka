<Window x:Class="ProjektSemBiblioteka.Views.AddWydawnictwo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektSemBiblioteka.Views" xmlns:viewmodels="clr-namespace:ProjektSemBiblioteka.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:WydawnictwoViewModel}"
        mc:Ignorable="d"
        Title="Dodaj Wydawnictwo" Height="400" Width="400" Background="#c1e1ff" FontSize="20" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Utwórz nowe Wydawnictwo" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="32,63,0,0" TextWrapping="Wrap" Text="Nazwa" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="150,63,0,0" TextWrapping="Wrap" Text="{Binding Wydawnictwo.Nazwa}" VerticalAlignment="Top" Width="120"/>
        <Button Content="Stwórz" HorizontalAlignment="Left" Margin="161,122,0,0" VerticalAlignment="Top" Command="{Binding AddWydawnictwo}"/>

    </Grid>
</Window>
